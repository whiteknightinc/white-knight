{% extends "base.jinja2" %}
{% block body %}
  <h2>Editor</h2>
    {% for entry in entries %}
    <form action="{{ request.route_url('tweet', id = entry.id) }}" method="POST">
        <div name="testid">{{entry.id}}</div>
            <div class="field">
                <label for="title">Title</label>
                    <input type="text" size="30" name="title" id="title" value={{entry.username}}>
            </div>
            <div class="field">
                <label for="text">Text</label>
                    <textarea name="text" id="text" rows="5" cols="80">{{ entry.text|safe}}</textarea>
            </div>
            <input type="submit" name="Submit" value="Tweet"/>
    </form>
    {% endfor %}
{% endblock %}